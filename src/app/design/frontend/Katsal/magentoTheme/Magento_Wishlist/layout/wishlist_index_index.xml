<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceContainer name="header.panel" remove="true"/>


        <referenceContainer name="header.container">
            <referenceBlock name="logo" remove="true"/>


            <container name="header-wrapper" htmlTag="header" htmlClass="header content header_custom_content">
                <container name="header.custom-wrapper" htmlTag="div" htmlClass="custom-wrapper_header">
                    <container name="review.header.wrapper.second" htmlTag="div" htmlClass="header_content_custom" before="-">
                        <block class="Magento\Theme\Block\Html\Header\Logo" name="footer-logo">
                            <arguments>
                                <argument name="logoPathResolver" xsi:type="object">Magento\Theme\ViewModel\Block\Html\Header\LogoPathResolver</argument>
                                <argument name="logo_size_resolver" xsi:type="object">Magento\Theme\ViewModel\Block\Html\Header\LogoSizeResolver</argument>
                            </arguments>
                        </block>
                        <container name="nav.menu" htmlTag="div" htmlClass="nav_menu">
                            <block name="nav_list" template="Magento_Wishlist::nav_list.phtml">
                                <arguments>
                                    <argument name="item_first" xsi:type="string">woman</argument>
                                    <argument name="item_second" xsi:type="string">men</argument>
                                </arguments>
                            </block>
                        </container>
                    </container>
                    <container name="header.left.side" htmlTag="div" htmlClass="header_right_side">
                        <container name="svg.list" htmlTag="div" htmlClass="svg_list" after="review.header.wrapper.second">
                            <block class="Magento\Framework\View\Element\Template" name="vendor.module.svgcontainer" template="Magento_Wishlist::svg-container.phtml" />
                        </container>
                        <container name="search.leng.menu.wrapper" htmlTag="div" htmlClass="wrapper">
                            <container name="leng.wrapper" htmlTag="div" htmlClass="leng.wrapper">
                                <block class="Magento\Framework\View\Element\Template" name="leng" template="Magento_Wishlist::leng.phtml" />
                            </container>
                            <container name="menu.svg.wrapper" htmlTag="div" htmlClass="menu.svg.wrapper" after="-">
                                <block class="Magento\Framework\View\Element\Template" name="menu" template="Magento_Wishlist::menu_svg.phtml" />
                            </container>
                        </container>
                    </container>
                </container>
            </container>
        </referenceContainer>

        <!-- <container name="custom.breadcrumbs" htmlTag="div" htmlClass="custom_breadcrumbs" before="-">
        <block name="custom.block.breadcrumbs" template="Magento_Wishlist::custom.breadcrumbs.phtml" />
        </container>
        <move element="custom.breadcrumbs" destination="content" before="-"/> -->

        <referenceBlock name="navigation.sections" remove="true"/>

        <referenceContainer name="columns.top">
            <referenceBlock name="page.main.title" template="Magento_Wishlist::html/custom-wh-title.phtml"/>
        </referenceContainer>
        <!-- <referenceContainer name="content">

            <container name="custom.breadcrumbs" htmlTag="div" htmlClass="custom_breadcrumbs">
                <block name="custom.block.breadcrumbs" template="Magento_Wishlist::custom.breadcrumbs.phtml" />
            </container>
            
            <container name="custom.page.main.title" htmlTag="div" htmlClass="page-title-wrapper">
                <block name="custom_title_wishlist" template="Magento_Wishlist::custom_title_wishlist.phtml"/>
            </container>
            <container name="buy_btn_wrapper" htmlTag="div" htmlClass="buy_btn_wrapper">
                <block name="buy_btn" template="Magento_Wishlist::buy_btn.phtml"/>
            </container>
        </referenceContainer> -->

        <referenceContainer name="footer-container">
            <referenceContainer name="footer" remove="true"/>
        </referenceContainer>
        <container name="advantages-container" htmlTag="div" htmlClass="advantages-container">
            <block name="advantages-content" template="Magento_Wishlist::advantages-content.phtml"/>
        </container>
        <container name="custom-wishlist-footer" htmlTag="footer" htmlClass="custom-wishlist-footer">
            <block name="custom-wishlist-footer-block" template="Magento_Wishlist::custom-wishlist-footer-block.phtml"/>
        </container>

        <referenceBlock name="customer.wishlist" template="Magento_Wishlist::custom-view.phtml">

            <referenceBlock name="sidebar.main.account_nav" remove="true"/>
            <referenceBlock name="customer.wishlist.item.review" remove="true"/>
            <referenceBlock name="customer.wishlist.item.comment" remove="true"/>
            <referenceBlock name="customer.wishlist.item.edit" remove="true"/>
            <referenceBlock name="customer.wishlist.button.update" remove="true"/>
            <referenceContainer name="footer-container" remove="true"/>
            <referenceContainer name="before.body.end" remove="true"/>


            <referenceBlock name="customer.wishlist.item.remove" template="Magento_Wishlist::item/column/custom-remove.phtml"/>
            <block name="custom-add-to-compare" template="Magento_Wishlist::item/configure/addto.phtml" />
        </referenceBlock>

        <referenceContainer name="customer.wishlist.buttons">
            <referenceBlock name="customer.wishlist.button.update" remove="true"/>
            <referenceBlock name="customer.wishlist.button.share" remove="true"/>
            <referenceBlock name="customer.wishlist.button.toCart" />
        </referenceContainer>

        <move element="top.search" destination="search.leng.menu.wrapper" before="-"/>
        <move element="customer.wishlist.item.remove" destination="customer.wishlist.items" before="-"/>
        <move element="custom-add-to-compare" destination="customer.wishlist.item.cart" after="-"/>
    </body>
</page>


